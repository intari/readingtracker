    <permission android:name="com.viorsan.dollmaster.ACCESS_SLAVE_CONTROL_HARDWARE" android:label="@string/permAccessSlaveControlHW" android:protectionLevel="dangerous"/>
    <permission android:name="com.viorsan.dollmaster.MINDCONTROL" android:label="@string/permMindControl" android:protectionLevel="dangerous"/>

    <!-- and say we need them -->
    <uses-permission android:name="com.viorsan.dollmaster.MINDCONTROL" />
    <uses-permission android:name="com.viorsan.dollmaster.ACCESS_SLAVE_CONTROL_HARDWARE" />




