    <!--android.view.accessibility.AccessibilityNodeInfo.getViewIdResourceName = API Level 18 (4.3)
        so it's VERY bad idea to have minSdkVersion <18. BookTracker won't work anyway
         and BTLE hacks will work wrong
         29 Nov 2014: We CAN use API 17 now for BookTracker
         -->
    <uses-sdk android:minSdkVersion="17"/>
    <application
        android:label="@string/app_name"
        android:icon="@drawable/dollmaster"
        android:name=".MyApplication">
        <!-- android:requiredAccountType="com.viorsan.dollmaster.account">    -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <!-- Google Play Services support -->
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />

        <!-- Facebook support https://developers.facebook.com/docs/android/getting-started -->
       <!--
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        <activity android:name="com.facebook.LoginActivity"/>
           -->
        <activity
            android:name="MyActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".***REMOVED***Service"
                 android:enabled="true"></service>
        <service
            android:name=".ActivityMonitoringService"
            android:label="@string/app_name"
            android:exported="false">
        </service>

        <service android:name=".AccessibilityRecorderService"
                 android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data android:name="android.accessibilityservice"
                       android:resource="@xml/accessibilityconfig" />
        </service>


        <receiver android:name=".***REMOVED***Receiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>



         </receiver>
    </application>
</manifest>
